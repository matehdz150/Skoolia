{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true
	},
	"assist": {
		"enabled": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
		"maxSize": 1048576,
		"experimentalScannerIgnores": ["node_modules", "**/dist", "**/.next"]
	},
	"overrides": [
		{
			"includes": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
			"linter": {
				"rules": {
					"correctness": {
						"noUndeclaredVariables": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
