{
	"$schema": "https://biomejs.dev/schemas/2.3.15/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true
	},
	"assist": {
		"enabled": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"apps/**/src/**/*.ts",
			"apps/**/src/**/*.tsx",
			"apps/**/src/**/*.js",
			"apps/**/src/**/*.jsx",
			"apps/**/src/**/*.json",
			"packages/**/src/**/*.ts",
			"packages/**/src/**/*.tsx",
			"packages/**/src/**/*.js",
			"packages/**/src/**/*.jsx",
			"packages/**/src/**/*.json",
			"!!apps/**/dist",
			"!!apps/**/.next",
			"*.ts",
			"*.js",
			"*.json"
		],
		"maxSize": 1048576
	},
	"overrides": [
		{
			"includes": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
			"linter": {
				"rules": {
					"correctness": {
						"noUndeclaredVariables": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
